@{
    ViewBag.Title = "Authentifizierung";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TimeTracker</title>
    <link rel="shortcut icon" type="image/x-icon" href="https://www.timetrackeriq.com/Images/TimeTracker/timetrackerlogo.svg">
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Login.css")" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <!-- Fontawesome Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
    <!-- Lobster Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lobster">
    <!-- Sans Serif Font -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700,800,300" rel="stylesheet" type="text/css">
    <script src="@Url.Content("~/Scripts/modernizr-2.6.2.js")"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <!-- Cookie Request -->
    <script type="text/javascript">
        window.cookieconsent_options = { "message": "Diese Webseite nutzt Cookies, um bestmögliche Funktionalität bieten zu können.", "dismiss": "Zustimmen", "learnMore": "Mehr Infos", "link": "http://de.webnode.com/datenschutzerklaerung/", "theme": "dark-bottom" };

        window.onload = function () {
            $("#status").fadeOut(500);
            $("#preloader").delay(500).fadeOut("slow");
        }
    </script>
</head>
<body>
    <!-- Preloader -->
    <div id="preloader">
        <div id="status">
            <div class="spinner">
                <div class="rect1"></div>
                <div class="rect2"></div>
                <div class="rect3"></div>
                <div class="rect4"></div>
                <div class="rect5"></div>
            </div>
        </div>
    </div>
    <!-- / Preloader -->
    <!-- Background Animation -->
    <ul class="circles">
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
    </ul>
    <!-- /Background Animation -->

    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-2"></div>
            <div class="col-lg-6 col-md-8 login-box">
                <div class="col-lg-12 login-key">
                    <i class="fa fa-key" aria-hidden="true"></i>
                </div>
                <div class="col-lg-12 login-title">
                    TIMETRACKER
                </div>

                <div class="col-lg-12 login-form">
                    <div class="col-lg-12 login-form">
                        @using (Html.BeginForm("Authentification", "Secure", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()


                            <div class="col-lg-12 loginbttm">
                                <div class="col-lg-12 login-btm login-text">
                                    <div class="alert alert-danger">Für diese Webseite sind Sie leider nicht berechtigt.</div>
                                </div>
                                <div class="col-lg-12 d-flex justify-content-center login-button">
                                    <button type="submit" class="btn btn-outline-primary">Nochmal versuchen</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="col-lg-3 col-md-2"></div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>

